{
  "editor.tabSize": 2,
  "editor.fontSize": 15,
  "editor.lineHeight": 27,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.wrappingIndent": "deepIndent",
  "workbench.startupEditor": "none",
  "git.enableSmartCommit": true,
  "prettier.printWidth": 90,
  "html.format.wrapLineLength": 90,
  "dart.lineLength": 90,
  "editor.rulers": [
    90
  ],
  "workbench.colorTheme": "Github Light Theme - Gray",
  "workbench.colorCustomizations": {
    "activityBar.background": "#bebebe",
    "editor.background": "#f9f9f9"
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "extensions.ignoreRecommendations": true,
  "go.useLanguageServer": true,
  "go.autocompleteUnimportedPackages": true,
  "go.toolsManagement.autoUpdate": true,
  "python.languageServer": "Pylance",
  "java.project.importOnFirstTimeStartup": "automatic",
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.semanticHighlighting.enabled": true,
  "java.refactor.renameFromFileExplorer": "autoApply",
  "java.format.settings.url": "https://github.com/emuvi/dotfiles/raw/master/java-pointel-style.xml",
  "java.format.settings.profile": "PointelStyle",
  "dart.checkForSdkUpdates": false,
  "dart.previewLsp": true,
  "git.confirmSync": false,
  "python.showStartPage": false,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.sideBar.location": "left",
  "errorLens.errorColor": "rgba(240,0,0,0.1)",
  "errorLens.errorTextColor": "rgba(240,240,240,0.3)",
  "errorLens.warningColor": "rgba(180,180,0,0.1)",
  "errorLens.warningTextColor": "rgba(240,240,240,0.3)",
  "errorLens.hintColor": "rgba(20,140,140,0.1)",
  "errorLens.hintTextColor": "rgba(240,240,240,0.3)",
  "errorLens.infoColor": "rgba(0,200,0,0.1)",
  "errorLens.infoTextColor": "rgba(240,240,240,0.3)",
  "remote.SSH.remotePlatform": {
    "LocalServer": "linux"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]" : {
    "editor.defaultFormatter": "golang.go"
  },
  "[php]": {
    "editor.defaultFormatter": "kokororin.vscode-phpfmt"
  },
  "[cmake]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[java]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "dart.showInspectorNotificationsForWidgetErrors": false,
  "redhat.telemetry.enabled": true,
  "workbench.iconTheme": "vscode-great-icons",
  "cmake.configureOnOpen": false
}
